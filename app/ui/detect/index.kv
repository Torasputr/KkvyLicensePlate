<DetectIndex>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 52
            Button:
                text: "Back"
                font_size: 30
                bold: True
                size_hint_y: None
                height: 52
                on_release: root.go_back()  
        BoxLayout:
            size_hint_y: None
            height: 60
            Label:
                text: "License Plate Detector"
                font_size: 40
                bold: True
                halign: 'center'
                valign: 'middle'
                text_size: self.size
        BoxLayout:
            Image:
                id: camera_feed
                allow_stretch: True
                keep_ratio: True
        # OCR Result and Button Section
        BoxLayout:
            size_hint_y: None
            height: 100
            Label:
                id: ocr_result
                text: "Detected Plate: None"
                font_size: 20
                halign: 'center'
                valign: 'middle'
                text_size: self.size
            Button:
                text: "Confirm Plate"
                font_size: 20
                bold: True
                on_release: root.go_confirm()
